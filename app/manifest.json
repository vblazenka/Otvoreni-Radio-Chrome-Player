{
  "name": "Otvoreni Radio Player",
  "version": "2.0.0",
  "manifest_version": 2,
  "description": "Neslužbena Chrome ekstenzija za online slušanje Otvorenog Radia.",
  "default_locale": "en",
    "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon-play.png"
    },
    "default_title": "Otvoreni Radio Chrome Player [Unoffical]"
  },
  "background": {
    "scripts": [
      "scripts/soundmanager2.js",
      "scripts/background.js"
    ]
  }
}
